<web-fragment xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd"
              version="3.0">

	<name>ClientErrorsLoggingServlet</name>

	<servlet>
		<servlet-name>ClientErrorLoggingServlet</servlet-name>
		<servlet-class>nz.ac.auckland.logging.server.ClientErrorsHandleServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ClientErrorLoggingServlet</servlet-name>
		<url-pattern>/clienterrorlogger/log</url-pattern>
	</servlet-mapping>

</web-fragment>
